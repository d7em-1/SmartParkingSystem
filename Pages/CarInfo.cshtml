@page
@model SmartParkingWeb.Pages.CarInfoModel
@{
    ViewData["Title"] = "إدخال معلومات السيارة";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4 text-primary">
            <i class="fas fa-car"></i> إدخال معلومات السيارة
        </h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
        }

        <form method="post" class="border p-4 rounded bg-light">
            <div class="mb-3">
                <label asp-for="CarType" class="form-label"><i class="fas fa-car-side"></i> نوع السيارة</label>
                <input asp-for="CarType" class="form-control" placeholder="مثال: تويوتا" />
                <span asp-validation-for="CarType" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Model" class="form-label"><i class="fas fa-cogs"></i> الموديل</label>
                <input asp-for="Model" class="form-control" placeholder="مثال: كامري 2022" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Color" class="form-label"><i class="fas fa-palette"></i> اللون</label>
                <input asp-for="Color" class="form-control" placeholder="مثال: أبيض" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PlateNumber" class="form-label"><i class="fas fa-id-card"></i> رقم اللوحة</label>
                <input asp-for="PlateNumber" class="form-control" placeholder="مثال: أ ب ج 1234" />
                <span asp-validation-for="PlateNumber" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-arrow-right"></i> الانتقال إلى اختيار القسم والموقف
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
