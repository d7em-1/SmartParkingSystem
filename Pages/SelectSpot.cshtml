@page
@model SmartParkingWeb.Pages.SelectSpotModel
@{
    ViewData["Title"] = "اختيار القسم والموقف";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4 text-primary">
            <i class="fas fa-parking"></i> اختيار القسم والموقف
        </h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
        }

        <form method="post">
            <div class="mb-3">
                <label asp-for="Department" class="form-label"><i class="fas fa-building"></i> اختر القسم</label>
                <select asp-for="Department" class="form-select">
                    <option value="">-- اختر القسم --</option>
                    <option>كلية الهندسة</option>
                    <option>كلية العلوم</option>
                    <option>كلية الطب</option>
                    <option>كلية الحاسب</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SpotRow" class="form-label"><i class="fas fa-columns"></i> اختر صف المواقف</label>
                <select asp-for="SpotRow" class="form-select">
                    <option value="">-- اختر الصف --</option>
                    <option>A</option>
                    <option>B</option>
                    <option>C</option>
                </select>
                <span asp-validation-for="SpotRow" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SpotNumber" class="form-label"><i class="fas fa-hashtag"></i> رقم الموقف</label>
                <select asp-for="SpotNumber" class="form-select">
                    <option value="">-- اختر رقم الموقف --</option>
                    @for (int i = 1; i <= 100; i++)
                    {
                        <option>@i</option>
                    }
                </select>
                <span asp-validation-for="SpotNumber" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fas fa-check"></i> تأكيد الحجز
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}